package com.busreservation.ui;

import java.util.Scanner;

import com.busreservation.colors.Colors;

public class Main {

	static void choiceCustomerOrAdmin(Scanner sc) {
		
		System.out.println(Colors.BLACK_BOLD_BRIGHT+Colors.LIGHT_BLUE_BACKGROUND+"1.Enter As Customer"+"\n"
		                                           +"2.Enter As Admin   "+"\n"
				                                   +"3.Exit      "+"\n"+Colors.RESET);
		int choice = sc.nextInt(); 
		System.out.println("Your Choice: "+choice);
		
		if(choice == 1) {
			System.out.println(Colors.BLACK_BOLD_BRIGHT+"Welcome"+Colors.RESET);
		}else if(choice == 2) {
			System.out.println(Colors.BLACK_BOLD_BRIGHT+"Welcome"+Colors.RESET);
		}else if(choice == 3) {
			System.out.println(Colors.BLACK_BOLD_BRIGHT+"Thankyou"+Colors.RESET);
		}else {
			System.out.println(Colors.BLACK_BOLD_BRIGHT+"Please select correct"+Colors.RESET);
		}
		
	}
	
	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		choiceCustomerOrAdmin(sc);
		
	}
	
}
