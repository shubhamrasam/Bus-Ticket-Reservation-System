package com.busreservation.dto;

import java.time.LocalDateTime;

public interface Ticket {
	
	/**
	 * Below Method is to Get Ticket Number
	 * @return ticketNo
	 */
	public int getTicketNo();
	
	/**
	 *  Below Method is to Set Ticket Number
	 * @param ticketNo
	 */
	public void setTicketNo(int ticketNo);

	/**
	 * Below Method is to Get Customer Id
	 * @return CustomerId
	 */
	
	public int getCustomerId();

	public void setCustomerId(int customerId);
    
	/**
	 * Below Method is to Get Bus Number
	 * @return BusNumber
	 */
	
	public int getBusNumber();

	public void setBusNumber(int busNumber);

	/**
	 * Below Method is to Get DateOfBooking
	 * @return DateOfBooking
	 */
	 
	public LocalDateTime getDateOfBooking();

	public void setDateOfBooking(LocalDateTime dateOfBooking);
    
	/**
	 * Below Method is to Get Date Of Departure
	 * @return Date Of Departure
	 */
	 
	public LocalDateTime getDeparture();

	public void setDeparture(LocalDateTime departure);
    
	/**
	 * Below Method is to Get Total_tickets
	 * @return Total_tickets
	 */
	public int getTotal_tickets();

	public void setTotal_tickets(int total_tickets);
	
	/**
	 * Below Method is to Get Total_fare
	 * @returnTotal_fare
	 */
	public int getTotal_fare();

	public void setTotal_fare(int total_fare);
	
	public boolean isStatus();

	public void setStatus(boolean status);
}
